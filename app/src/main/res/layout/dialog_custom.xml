<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/dialogNormalTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlackTitle"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dialogNormalContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogNormalTitleTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorHint"
        android:textSize="16dp" />

    <Button
        android:id="@+id/dialogNormalConfirmButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBlue"
        android:text="@string/btn_confirm"
        android:textColor="@color/colorWhite"
        android:textSize="22dp" />
</RelativeLayout>